<div class="progress-section">
    <h2 class="progress-title">Monthly Progress Summary</h2>
    <div class="progress-grid">
        <div class="progress-card">
            <h3><i class="fas fa-dumbbell"></i> Workout Completion</h3>
            <div class="progress-value" id="workoutProgress">0%</div>
            <div class="progress-bar">
                <div class="progress-fill" id="workoutBar" style="width: 0%"></div>
            </div>
        </div>
        
        <div class="progress-card">
            <h3><i class="fas fa-tint"></i> Water Intake Goal</h3>
            <div class="progress-value" id="waterProgress">0%</div>
            <div class="progress-bar">
                <div class="progress-fill" id="waterBar" style="width: 0%"></div>
            </div>
        </div>
        
        <div class="progress-card">
            <h3><i class="fas fa-moon"></i> Average Sleep</h3>
            <div class="progress-value" id="sleepProgress">0h</div>
            <div class="progress-bar">
                <div class="progress-fill" id="sleepBar" style="width: 0%"></div>
            </div>
        </div>
        
        <div class="progress-card">
            <h3><i class="fas fa-heart-pulse"></i> Wellness Index</h3>
            <div class="progress-value" id="wellnessProgress">0%</div>
            <div class="progress-bar">
                <div class="progress-fill" id="wellnessBar" style="width: 0%"></div>
            </div>
        </div>
    </div>
</div>